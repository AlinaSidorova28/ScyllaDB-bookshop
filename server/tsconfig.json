{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "utils/*": ["../utils/*"],
      "routes/*": ["./routes/*"],
      "types/*": ["./types/*"],
      "controllers/*": ["./controllers/*"],
      "middlewares/*": ["./middlewares/*"],
      "server/*": ["./server/*"],
    },
  },
}
